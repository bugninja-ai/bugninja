# Bugninja Configuration Example
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Azure OpenAI endpoint URL (required)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Azure OpenAI API key (required)
AZURE_OPENAI_KEY=your-api-key-here

# Azure OpenAI model name (default: gpt-4.1)
AZURE_OPENAI_MODEL=gpt-4.1

# Temperature for LLM responses (default: 0.001, range: 0.0-2.0)
AZURE_OPENAI_TEMPERATURE=0.001

# Azure OpenAI API version (default: 2024-02-15-preview)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# Logging Configuration
# =============================================================================

# Logging level (default: INFO, options: DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Logging format string
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Enable rich console logging (default: true)
ENABLE_RICH_LOGGING=true

# =============================================================================
# Development Configuration
# =============================================================================

# Enable debug mode (default: false)
DEBUG_MODE=false

# Bypass LLM verification for testing (default: false)
BYPASS_LLM_VERIFICATION=false

# Enable verbose logging for debugging (default: false)
ENABLE_VERBOSE_LOGGING=false

# =============================================================================
# File Paths Configuration
# =============================================================================

# Directory for storing traversal files (default: ./traversals)
TRAVERSALS_DIR=./traversals

# Directory for storing log files (default: ./logs)
LOGS_DIR=./logs

# =============================================================================
# Note: Browser, Agent, Replicator, Screenshot, and Authentication configurations
# are now code-based and do not require environment variables.
# ============================================================================= 